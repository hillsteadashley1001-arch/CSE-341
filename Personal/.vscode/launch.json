{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch API with nodemon",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nodemon", "--inspect", "${workspaceFolder}/server.js"],
      "restart": true,
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "env": { "NODE_ENV": "development" },
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}